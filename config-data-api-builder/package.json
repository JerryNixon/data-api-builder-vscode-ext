{
  "name": "config-data-api-builder",
  "displayName": "DAB Config (Data API builder)",
  "description": "Edit the Data API Builder configuration file.",
  "publisher": "jerry-nixon",
  "version": "0.0.3",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.95.0"
  },
  "galleryBanner": {
    "color": "#0078d7",
    "theme": "dark",
    "background": "images/dab-logo.png"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JerryNixon/data-api-builder-vscode-ext.git"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "workspaceContains:**/dab-*.json",
    "workspaceContains:**/staticwebapp.database.config.json",
    "onFileSystemChange:**/dab-*.json",
    "onFileSystemChange:**/staticwebapp.database.config.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dabExtension.editConfiguration",
        "title": "DAB Config",
        "category": "DAB"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dabExtension.editConfiguration",
          "when": "(resourceFilename =~ /^dab-.*\\.json$/) || resourceFilename == 'staticwebapp.database.config.json'",
          "group": "1_dab"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "keywords": [
    "Data API Builder",
    "dab",
    "configuration",
    "json",
    "tools",
    "automation"
  ],
  "author": "Jerry Nixon",
  "license": "MIT"
}