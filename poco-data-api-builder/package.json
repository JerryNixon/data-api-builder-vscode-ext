{
  "name": "poco-data-api-builder",
  "displayName": "DAB Poco Gen (Data API builder)",
  "description": "Generate C# POCO (Plain Old CLR Object) models from a configuration file.",
  "publisher": "jerry-nixon",
  "version": "0.0.6",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.95.0"
  },
  "galleryBanner": {
    "color": "#0078d7",
    "theme": "dark",
    "background": "images/dab-logo.png"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JerryNixon/data-api-builder-vscode-ext.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/dab-*.json",
    "workspaceContains:**/staticwebapp.database.config.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dabExtension.generatePoco",
        "title": "POCO models"
      },
      {
        "command": "dabExtension.generateMcpServer",
        "title": "MCP server"
      },
      {
        "command": "dabExtension.generateRestClient",
        "title": "REST client"
      }
    ],
    "submenus": [
      {
        "id": "dabExtension.generateSubMenu",
        "label": "Generate C#"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "dabExtension.generateSubMenu",
          "when": "(resourceFilename =~ /^dab-.*\\.json$/) || resourceFilename == 'staticwebapp.database.config.json'",
          "group": "1_dab@99"
        }
      ],
      "dabExtension.generateSubMenu": [
        {
          "command": "dabExtension.generatePoco",
          "group": "1_generate@1"
        },
        {
          "command": "dabExtension.generateMcpServer",
          "group": "1_generate@2"
        },
        {
          "command": "dabExtension.generateRestClient",
          "group": "1_generate@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "webpack",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.6.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "keywords": [
    "Data API builder"
  ],
  "author": "Jerry Nixon",
  "license": "MIT",
  "dependencies": {
    "@types/mssql": "^9.1.6",
    "mssql": "^9.3.2"
  }
}